<UserControl x:Class="Tenpai.Views.ChiCandidate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tenpai.Views"
             xmlns:views="clr-namespace:Tenpai.Views"
             mc:Ignorable="d">
    <DockPanel>
        <StackPanel Orientation="Horizontal">
            <views:ReadOnlyTilePlaceholder TileType="{Binding Tiles[0]}" />
            <views:ReadOnlyTilePlaceholder TileType="{Binding Tiles[1]}" />
            <views:ReadOnlyTilePlaceholder TileType="{Binding Tiles[2]}" />
        </StackPanel>
    </DockPanel>
</UserControl>
